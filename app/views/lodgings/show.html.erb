<p id="notice"><%= notice %></p>

<p>
  <% if @lodging.photo.attached? %>
    <img alt="" src="<%=(url_for(@lodging.photo))%>" style="width:300px;height:300px;">
  <% end %>    
</p>

<p>
  <% if @lodging.video.attached? %>
    <video width="300" height="300" controls>
      <source src="<%=(url_for(@lodging.video))%>" type="video/mp4">
    </video>
  <% end %>    
</p>

<p>
  <strong>Title:</strong>
  <%= @lodging.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @lodging.description %>
</p>

<p>
  <strong>Location:</strong>
  <%= @lodging.location %>
</p>

<p>
  <strong>Amenities:</strong>
  <%= @lodging.amenities %>
</p>

<p>
  <strong>Facilities:</strong>
  <%= @lodging.facilities %>
</p>

<p>
  <strong>Equipment:</strong>
  <%= @lodging.equipment %>
</p>


<%= link_to 'Complete Reservation', root_path, style:"background:white", class:"btn btn-primary" %>
<%= link_to 'Cancel', lodgings_path, style:"background:white", class:"btn btn-primary" %>

<h1></h1>
<h2>Reviews</h2>

<table class = "table">
  <thead>
    <tr>
      <th>Description</th>
      <th>Rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lodging_reviews.each do |lodrev| %>
      <tr>
        <td><%= lodrev.description %></td>
        <td><%= lodrev.rate %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>