    <li id="submit-filter">

      <a class="btn btn-secondary bg-dark mt-5" type="button" >
        Apply Filters
      </a>

    </li>


  </ul>

</div>


<table class = "table table-hover">
  <thead class = "thead-dark">
  <tr>
    <th >Preview</th>
    <th>Title</th>
    <th>Description</th>
    <th>Location</th>
    <th>Amenities</th>
    <th>Facilities</th>
    <th>Equipment</th>
    <th>Reservation</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @lodgings != nil %>

    <% @lodgings.each do |lodging| %>
      <tr>
        <td class = "vertical_center">
          <% if lodging.photo.attached? %>
            <img alt="" src="<%=(url_for(lodging.photo))%>" style="width:200px;height:200px;">
          <% end %>
        </td>
        <td class = "vertical_center"><%= lodging.title %></td>
        <td class = "vertical_center"><%= lodging.description %></td>
        <td class = "vertical_center"><%= lodging.location %></td>
        <td class = "vertical_center"><%= lodging.amenities %></td>
        <td class = "vertical_center"><%= lodging.facilities %></td>
        <td class = "vertical_center"><%= lodging.equipment %></td>

        <td class="vertical_center">

          <%= link_to 'Make Reservation', lodging , class:"btn btn-primary mt-3", style: "color: white", id: "lodging_button"%>
          <br>
          <%= link_to "Make Review",new_lodging_lodging_review_url(lodging, :lodgID => lodging.id), class: "btn btn-primary mt-3",style: "color: white", id: "lodging_button"%>

        </td>



        <% if can? :manage, @lodging %>
          <td><%= link_to 'Edit', edit_lodging_path(lodging) %></td>
          <td><%= link_to 'Destroy', lodging, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  <%else %>

  <%end %>

  </tbody>
</table>


