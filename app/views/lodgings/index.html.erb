  <button class="btn btn-secondary dropdown-toggle bg-dark" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
    Daily Fee
  </button>

  <ul id="menu-padding" class="dropdown-menu" aria-labelledby="dropdownMenuButton1">

    <!--    dropdown-menu header-->
    <li>
      <h5 id="filter-header" class="mt-2"><b> Daily Fee </b></h5>
      <hr class = "mb-3">

      <span class="mb-3">
        <label for="exampleInputEmail1" class="form-label"><b>Min-Fee</b></label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
      </span>
      <span class="mb-3">
