<h2>Lodgings</h2>

<table class = "table">
  <thead>
    <tr>
      <th>Preview</th>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <th>Amenities</th>
      <th>Facilities</th>
      <th>Equipment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lodgings.each do |lodging| %>
      <tr>
        <td>
          <% if lodging.photo.attached? %>
            <img alt="" src="<%=(url_for(lodging.photo))%>" style="width:200px;height:200px;">
          <% end %>
        </td>
        <td><%= lodging.title %></td>
        <td><%= lodging.description %></td>
        <td><%= lodging.location %></td>
        <td><%= lodging.amenities %></td>
        <td><%= lodging.facilities %></td>
        <td><%= lodging.equipment %></td>
        <td><%= link_to 'Delete Lodge', lodging, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <!--
        <td><%= link_to 'Edit', edit_lodging_path(lodging) %></td>
        <td><%= link_to 'Destroy', lodging, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Lodging', "lodgings/new", style:"background:white", class:"btn", id: "default-button"%>

<h2>User Reviews</h2>

<table class = "table">
  <thead>
    <tr>
      <th>Rating</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.rate %></td>
        <td><%= review.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

