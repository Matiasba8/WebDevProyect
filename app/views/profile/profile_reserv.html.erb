<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Lodge</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Daily Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |res| %>
      <tr>
        <td><%= res.lodging.title %></td>
        <td><%= res.start_date %></td>
        <td><%= res.end_date %></td>
        <td><%= res.daily_fee %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>